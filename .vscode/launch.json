    "version": "0.2.0",
    "configurations": [
        { 
            "name": "Launch",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/SyrlSoundboard/bin/Debug/net8.0/SyrlSoundboard.dll",
            "preLaunchTask": "dotnet: build"
        },
        { 
            "name": "Launch (With GTK Debugger)",
            "type": "coreclr",
            "request": "launch",
            "env": {
                "GTK_DEBUG": "interactive"
            },
            "program": "${workspaceFolder}/SyrlSoundboard/bin/Debug/net8.0/SyrlSoundboard.dll",
            "preLaunchTask": "dotnet: build"
        },
    ]
}